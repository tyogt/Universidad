{% extends 'base.html' %}
{% load static %}`r`n{% load humanize %}

{% block content %}
    <div class="d-flex justify-content-center mt-4">
        <div class="card" style="width: 90%; max-width: 1000px;">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="mb-0">Detalle de proveedor</h5>
                <a href="{% url 'proveedor_update' proveedor.id_proveedor %}" class="btn btn-warning">
                    <i class="bx bx-edit"></i> Editar
                </a>
            </div>
            <div class="card-body">
                <table class="table table-borderless">
                    <tr>
                        <th width="200">ID:</th>
                        <td>{{ proveedor.id_proveedor }}</td>
                    </tr>
                    <tr>
                        <th>Nombre:</th>
                        <td>{{ proveedor.nombre }}</td>
                    </tr>
                    <tr>
                        <th>Contacto:</th>
                        <td>{{ proveedor.contacto|default:"-" }}</td>
                    </tr>
                </table>

                <!-- Materiales que suministra este proveedor -->
                <hr>
                <h6 class="mt-3 mb-3">Materiales suministrados</h6>
                {% if materiales_proveedor %}
                <div class="table-responsive">
                    <table class="table table-sm table-hover">
                        <thead>
                            <tr>
                                <th>Material</th>
                                <th>Unidad</th>
                                <th>Precio unitario</th>
                                <th>Tiempo de entrega</th>
                                <th>Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for pm in materiales_proveedor %}
                            <tr>
                                <td>
                                    <a href="{% url 'material_detail' pm.id_material.id_material %}">
                                        {{ pm.id_material.nombre }}
                                    </a>
                                </td>
                                <td>{{ pm.id_material.unidad }}</td>
                                <td>Q{{ pm.precio_unitario|floatformat:2|intcomma|default:"-" }}</td>
                                <td>{{ pm.tiempo_entrega|default:"-" }} dÃ­as</td>
                                <td>
                                    <a href="{% url 'material_detail' pm.id_material.id_material %}" class="btn btn-sm btn-info">
                                        <i class="bx bx-show"></i>
                                    </a>
                                </td>
                            </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
                {% else %}
                <p class="text-muted">Este proveedor no tiene materiales asociados.</p>
                {% endif %}

                <a href="{% url 'inventoryapp' %}" class="btn btn-secondary mt-3">Volver</a>
            </div>
        </div>
    </div>
{% endblock %}


