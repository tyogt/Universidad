{% extends 'base.html' %}
{% load static %}

{% block content %}
    <div class="d-flex justify-content-center mt-4">
        <div class="card" style="width: 90%; max-width: 1000px;">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="mb-0">Detalle de incidente</h5>
                <a href="{% url 'quality:incidente_update' incidente.id_incidente %}" class="btn btn-warning">
                    <i class="bx bx-Editar"></i> Editar
                </a>
            </div>
            <div class="card-body">
                <table class="table table-borderless">
                    <tr>
                        <th width="200">ID:</th>
                        <td>{{ incidente.id_incidente }}</td>
                    </tr>
                    <tr>
                        <th>Descripción:</th>
                        <td>{{ incidente.descripcion }}</td>
                    </tr>
                    <tr>
                        <th>Severidad:</th>
                        <td>
                            {% if incidente.gravedad == "Baja" %}
                                <span class="badge bg-info">{{ incidente.gravedad }}</span>
                            {% elif incidente.gravedad == "Media" %}
                                <span class="badge bg-warning">{{ incidente.gravedad }}</span>
                            {% elif incidente.gravedad == "Alta" %}
                                <span class="badge bg-danger">{{ incidente.gravedad }}</span>
                            {% elif incidente.gravedad == "CrÃ­tica" %}
                                <span class="badge bg-dark">{{ incidente.gravedad }}</span>
                            {% else %}
                                {{ incidente.gravedad|default:"-" }}
                            {% endif %}
                        </td>
                    </tr>
                    <tr>
                        <th>Fecha:</th>
                        <td>{{ incidente.fecha|date:"Y-m-d" }}</td>
                    </tr>
                    <tr>
                        <th>Proyecto:</th>
                        <td>{{ incidente.id_proyecto.nombre_proyecto }}</td>
                    </tr>
                </table>
                <a href="{% url 'quality:incidente_list' %}" class="btn btn-secondary">Volver</a>
            </div>
        </div>
    </div>
{% endblock %}

